{
    "name": "StopAnnoyance",
    "version": "1.0",
    "description": "Extension to Google Chrome that can remove annoying elements from web pages.",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/stop-sign-16.png",
            "32": "images/stop-sign-32.png",
            "48": "images/stop-sign-48.png",
            "128": "images/stop-sign-128.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "16": "images/stop-sign-16.png",
        "32": "images/stop-sign-32.png",
        "48": "images/stop-sign-48.png",
        "128": "images/stop-sign-128.png"
    },
    "manifest_version": 2
}
